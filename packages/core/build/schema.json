{
  "$schema": "http://json-schema.org/schema",
  "id": "projectBuilderInit",
  "title": "init a workspace",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "x-prompt": "project name",
      "description": "project's name"
    },
    "path": {
      "type": "string",
      "defult": "/",
      "x-prompt": "project path (default: '/')",
      "description": "project's root path"
    }
  },
  "required": ["name"]
}
