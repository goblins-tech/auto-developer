{
  "name": "<%= dasherize(opt.name) %>",
  "version": "<%=opt.version ||'1.0.0' %>",
  "private":  "<%=opt.private ||false %>",
  "description": "<%=opt.description ||'created by `The Creator` the-creator.com' %>",
  "main": "<%=opt.main || 'index.js' %>",
  "scripts":  <%= JSON.stringify(opt.scripts) || '{}' %>,
  "bin":  <%= JSON.stringify(opt.bin) || '{}' %>,
  "repository": {
    "type": "<%= opt.repo?opt.repo.type:'' %>",
    "url": "<%= opt.repo?opt.repo.url:'' %>"
  },
  "keywords": <%=opt.keywords?JSON.stringify(opt.keywords):'""' %>,
  "author": "<%= (opt.author?opt.author.name:'') + ( opt.author && opt.author.name?' <'+opt.author.email+'>':'') + ( opt.author && opt.author.url?' ('+opt.author.url+')':'') %>", <%# JSON.stringify(opt.author)||'""'%>
  "license": "<%= opt.license || 'MIT' %>",
  "homepage": "<%= opt.homepage %>",
  "bugs": "<%= opt.urls?opt.urls.bugs:'' %>",
  "dependencies":  <%= JSON.stringify(opt.dependencies) || '{}' %>,
  "devDependencies":  <%= JSON.stringify(opt.devDependencies) || '{}' %>,
  <% if(opt.schematics) { %> "schematics": "<%=opt.schematics %>", <% } %>
}



<%# todo: add other elements, ex: ...opt.other{} %>
